# Frontend Environment Variables
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WEBSOCKET_URL=wss://ws.yourdomain.com
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_SIMULATOR_INTEGRATION_ENABLED=true
NEXT_PUBLIC_TRAINING_FEATURES_ENABLED=true
NEXT_PUBLIC_ENABLE_3D_VISUALIZATION=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_AUTH_DOMAIN=auth.yourdomain.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-auth-client-id

# Backend Core Environment Variables
LOG_LEVEL=info
ENABLE_VERBOSE_LOGGING=false
CONFIG_FILE_PATH=/app/config/config.json
ENABLE_THREAD_POOL=true
THREAD_POOL_SIZE=8
ENABLE_TELEMETRY=true
MAX_REQUEST_SIZE=10485760
ENVIRONMENT=development

# Database Connection Variables
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=120
MONGODB_URI=mongodb://admin:admin@localhost:27017
MONGODB_DATABASE=aptp
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=postgres
TIMESCALE_DATABASE=timescale_db

# Service Specific Variables
DOCUMENT_SERVICE_PORT=8001
DOCUMENT_SERVICE_HOST=localhost
SYLLABUS_SERVICE_PORT=8002
SYLLABUS_SERVICE_HOST=localhost
ASSESSMENT_SERVICE_PORT=8003
ASSESSMENT_SERVICE_HOST=localhost
USER_SERVICE_PORT=8004
USER_SERVICE_HOST=localhost
SCHEDULER_SERVICE_PORT=8005
SCHEDULER_SERVICE_HOST=localhost
ANALYTICS_SERVICE_PORT=8006
ANALYTICS_SERVICE_HOST=localhost
COMPLIANCE_SERVICE_PORT=8007
COMPLIANCE_SERVICE_HOST=localhost
COLLABORATION_SERVICE_PORT=8008
COLLABORATION_SERVICE_HOST=localhost
VISUALIZATION_SERVICE_PORT=8009
VISUALIZATION_SERVICE_HOST=localhost
INTEGRATION_SERVICE_PORT=8010
INTEGRATION_SERVICE_HOST=localhost
SECURITY_SERVICE_PORT=8011
SECURITY_SERVICE_HOST=localhost

# AI/ML Service Environment Variables
AI_MODEL_PATH=/app/models
ENABLE_GPU=false
DOCUMENT_INTELLIGENCE_PORT=9001
PREDICTIVE_ANALYTICS_PORT=9002
ADAPTIVE_LEARNING_PORT=9003
GAMIFICATION_PORT=9004
NLP_MODEL_TYPE=transformer
PROCESSING_BATCH_SIZE=32
MAX_DOCUMENT_SIZE=20971520

# Security and Authentication
JWT_SECRET=your-jwt-secret-key-should-be-very-long-and-random
JWT_EXPIRATION=3600
ENABLE_MFA=true
AES_KEY=your-aes-encryption-key
AES_IV=your-aes-iv
ENABLE_ZERO_TRUST=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Integration Variables
SIMULATOR_TELEMETRY_PORT=8080
SIMULATOR_TELEMETRY_PROTOCOL=UDP
BIOMETRIC_DEVICE_ENABLE=true
ENABLE_CALENDAR_INTEGRATION=true
GOOGLE_API_KEY=your-google-api-key
OUTLOOK_CLIENT_ID=your-outlook-client-id

# Deployment Variables
ENABLE_AUTO_SCALING=true
MIN_INSTANCES=1
MAX_INSTANCES=5
CPU_THRESHOLD=75
MEMORY_THRESHOLD=80
ENABLE_CANARY_DEPLOYMENTS=false
